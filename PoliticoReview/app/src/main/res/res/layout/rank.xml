<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation = "horizontal">
    
    <TextView
        android:id="@+id/rankTextView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="1위"
        android:background="@color/colorWinner"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/politicoState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울특별시"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/politicoCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="용산구"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "horizontal"
            android:background="#ffffff">

            <TextView
                android:id="@+id/politicoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진  영"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/politicoParty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더불어민주당"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "horizontal"
            android:background="#ffffff">

            <TextView
                android:id="@+id/localProportional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지역구 국회의원"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/electionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초선"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>

    <!--공약 조회및 평가는 테스트용-->